{
    "name": "spiewajacestudio.pl",
    "version": "1.0.0",
    "description": "Website for Śpiewające Studio",
    "main": "index.js",
    "scripts": {
        "start": "npm run watch:sass | live-server src/",
        "watch:sass": "node-sass src/sass/main.scss src/css/style.css -w",
        "compile:sass": "node-sass src/sass/main.scss src/css/style.comp.css",
        "concat:css": "concat -o src/css/style.concat.css src/css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/css/style.concat.css -o src/css/style.prefix.css",
        "compress:css": "node-sass src/css/style.prefix.css docs/css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
        "build:clean": "rimraf docs",
        "build:mkdirs": "mkdir -p docs/css && mkdir -p docs/img",
        "build:copy:assets": "cp -r src/img/* docs/img",
        "build:copy:html": "find src -name '*.html' -type f -exec cp {} docs \\;",
        "build": "npm run build:clean && npm run build:mkdirs && npm run build:copy:assets && npm run build:copy:html && npm run build:css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jurek2006/spiewajacestudio.pl.git"
    },
    "author": "Jurek Skowron",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jurek2006/spiewajacestudio.pl/issues"
    },
    "homepage": "https://github.com/jurek2006/spiewajacestudio.pl#readme",
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "concat": "^1.0.3",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.1.3"
    },
    "dependencies": {}
}
